= bootstrap_form_for @league, layout: :horizontal do |f|
  = f.text_field :name
  /= f.number_field :level
  = f.number_field :target, label: 'Max. Training Points', help: 'Sets the maximum amount of training tokens that can be applied per week, 1 point â‰ˆ 10m running'
  = f.number_field :league_length, label: 'Preferred League Length', min: @min_length, append: 'Days', help: 'Wont be used if smaller than the min number of days required, is optional'
  = f.number_field :pause_length, :value=>7, append: "Days"

  =f.form_group "league[starts_at]", label: { text: "Starts at"} do
    div class='input-group date' id='datetimepicker1'
      input class="form-control" id="league_starts_at" name="league[starts_at]" type='text'
        span class="input-group-addon"
          span class="glyphicon glyphicon-calendar"


  .pull-right
    = link_to 'Back', :back, class: 'btn btn-default'
    '
    = f.primary
